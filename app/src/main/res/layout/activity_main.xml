<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical"
    tools:context="com.kieboom.joey.avanseventmanager.controllers.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/logoavans2x" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Evenement Manager"/>

            <Button
                android:id="@+id/main_create_artist"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create artist"/>

            <Button
                android:id="@+id/main_create_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create area"/>

            <Button
                android:id="@+id/main_create_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create performance"/>

            <Button
                android:id="@+id/main_edit_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit artist"/>

            <Button
                android:id="@+id/main_edit_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit area"/>

            <Button
                android:id="@+id/main_edit_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit performance"/>

            <Button
                android:id="@+id/main_performance_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview performance"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
